<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f355d" />
            <gradient android:angle="-90" android:startColor="#58857e" android:endColor="#58857e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#58857e" />
            <solid android:color="#3f355d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#3f355d" />
            <gradient android:angle="-90" android:startColor="#3f355d" android:endColor="#3f355d" />
        </shape>
    </item>
</selector>