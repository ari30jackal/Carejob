<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carefast.register.VerifActivity">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifikasi Email"
            android:textColor="@color/ungu"
            android:textSize="18sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pesan"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/ungu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kami sudah mengirimkan verifikasi email ke "/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/ungu"
                android:text="user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_verif"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/ungu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Periksa Folder Spam Anda Apabila Tidak Menerima Email di inbox anda"/>

        <Button
            android:id="@+id/sudahverifemail"
            android:padding="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:background="@drawable/mybtnungu"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Verifikasi E-mail"/>

        <TextView
            android:textColor="@color/ungu"
            android:id="@+id/resendemail"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim ulang E-mail"/>

    </LinearLayout>



</RelativeLayout>