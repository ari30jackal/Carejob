<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="7">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/fixcarefast"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="3.2"
                android:fontFamily="@font/poppins"
                android:text="@string/email_phone"
                android:textColor="@color/defaultfont"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_page"
                android:layout_weight="0.3"
                android:fontFamily="@font/poppins"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/defaultorange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/poppins"
                android:text="/5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="textWebEmailAddress"
                android:fontFamily="@font/poppins"
                android:id="@+id/et_email"
                android:textSize="14sp"
                android:maxLines="1" />
            <com.xwray.passwordview.PasswordView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:id="@+id/et_password"
                android:textSize="14sp"
                app:useStrikeThrough="true"
                android:hint="password"
                android:maxLines="1" />
            <com.xwray.passwordview.PasswordView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:id="@+id/et_confirmpassword"
                android:textSize="14sp"
                app:useStrikeThrough="true"
                android:hint="Konfirmasi password"
                android:maxLines="1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_phone"
                android:inputType="phone"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:hint="phone"
                android:maxLines="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            >



            <ImageView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_lanjutkan"
                android:background="@drawable/btnlanjutkan"
                android:text="@string/lanjutkan"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>