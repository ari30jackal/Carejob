<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="7">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/fixcarefast"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="3.2"
                android:fontFamily="@font/poppins"
                android:text="Data Diri"
                android:textColor="@color/defaultfont"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_page"
                android:layout_weight="0.3"
                android:fontFamily="@font/poppins"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/defaultorange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/poppins"
                android:text="/5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Induk Kependudukan"
                android:maxLines="1"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_namadepan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:hint="Nama Depan"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <EditText
                    android:id="@+id/et_namabelakang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:fontFamily="@font/poppins"
                    android:hint="Nama Belakang"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_tempat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:hint="Tempat"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <EditText
                    android:id="@+id/et_tanggallahir"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:editable="false"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:drawableEnd="@drawable/ic_kalender"
                    android:hint="Tangal Lahir"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/poppins"
                    android:text="jenis kelamin"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/pria_iv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"

                    android:background="@drawable/priaactive" />

                <ImageView
                    android:id="@+id/wanita_iv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/wanitaaa" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Tinggi Badan"/>

                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/btn_minustinggi"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_minus"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="35dp"

                        android:text="150"
                        android:id="@+id/tinggi"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="30dp"
                        android:gravity="center_vertical"
                        android:text="cm"

                        android:maxLines="1"

                        android:textSize="12sp"
                        android:fontFamily="@font/poppins"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_plustinggi"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_plus"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="120dp"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Berat Badan"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_minusberat"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_minus"/>
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="35dp"

                        android:fontFamily="@font/poppins"
                        android:textAlignment="center"
                        android:text="57"
                        android:id="@+id/berat"
                        android:textSize="14sp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="30dp"

                        android:text="kg"

                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_plusberat"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_plus"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                android:text="Alamat Tempat Tinggal"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/rlprovince"

                android:background="@drawable/whiteroundedshadow_linear">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrowright"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_provinsi_show"
                    android:fontFamily="@font/poppins"
                    android:text="Provinsi" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rlcity"
                android:layout_marginVertical="5dp"
                android:background="@drawable/whiteroundedshadow_linear">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrowright"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_city_show"
                    android:text="Kota / Kabupaten" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rlkecamatan"
                android:layout_marginVertical="5dp"
                android:background="@drawable/whiteroundedshadow_linear">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrowright"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_kecamatan_show"
                    android:text="Kecamatan" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rl_postcode"
                android:layout_marginVertical="5dp"
                android:background="@drawable/whiteroundedshadow_linear">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrowright"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_postcode_show"
                    android:text="Kode Pos" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rldetilalamat"
                android:layout_marginVertical="5dp"
                android:background="@drawable/whiteroundedshadow_linear">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrowright"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/rincianshow"
                        android:fontFamily="@font/poppins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="30"
                        android:layout_marginLeft="5dp"
                        android:text="Rincian Alamat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="...."
                        android:visibility="gone"
                        android:id="@+id/etctext"/>
                </LinearLayout>


            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unggah foto selfie dengan E-KTP Anda"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="200dp"
                android:translationZ="5dp"
                android:background="@drawable/whiteroundedshadow_linear"
                android:layout_height="150dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:elevation="200dp"
                    android:id="@+id/takepict"
                    android:translationZ="5dp"
                    android:background="@drawable/whiteroundedshadow_linear">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/hasilfoto"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_camera"
                        android:id="@+id/camera"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_kamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buka Kamera"
                        android:fontFamily="@font/poppins"
                        android:layout_below="@id/camera"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >
            <ImageView
                android:id="@+id/btn_kembali"
                android:background="@drawable/btnkembali"
                android:layout_width="120dp"
                android:layout_height="35dp"/>




            <ImageView
                android:id="@+id/btn_lanjutkan"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btnlanjutkan"
                />
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>