<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.carefast.detailjob.DetailJobActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_backarrow"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="Jobs"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/defaultfont"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"/>


    </RelativeLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_image3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textColor="@color/defaultfont"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="jabatan"
        android:id="@+id/tv_jabatan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginHorizontal="40dp"
        android:textColor="@color/defaultfont"
        android:textAlignment="center"

        android:textSize="10sp"
        android:text="jabatan"
        android:id="@+id/tv_placement"/>

    <io.github.kexanie.library.MathView
        android:id="@+id/desc_advertisement"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="top"
        app:engine="MathJax"
        />
     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
android:id="@+id/btn_lamar"
         android:text="Lamar Pekerjaan"

         android:backgroundTint="@color/birubutton"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:layout_marginTop="10dp"
         android:layout_marginHorizontal="40dp"
         />
 </LinearLayout>
</androidx.core.widget.NestedScrollView>