<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/card"
    android:background="@drawable/roundwhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1.3"
            android:weightSum="6"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:text="1212312"
                android:id="@+id/tv_date"
                android:textColor="@color/defaultfont"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:text="1231231241"
                android:id="@+id/tv_hour"
                android:textColor="@color/defaultfont"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="5.8"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="3dp"
                android:background="@drawable/ic_image3"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_weight="3.5"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvjabataninterview"
                    android:text="judul"
                    android:textColor="@color/defaultfont"
                    android:textStyle="bold"

                    android:textSize="14sp"
                    android:layout_marginStart="14dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvinterviewer"
                    android:text="judul"
                    android:textColor="@color/defaultfont"

                    android:textSize="12sp"
                    android:layout_marginStart="14dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:autoSizeTextType="uniform"
                    android:id="@+id/tvlocationinterview"
                    android:layout_marginBottom="10dp"
                    android:text="judul"
                    android:textColor="@color/defaultfont"
android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="8sp"
                    android:layout_marginStart="14dp"
                    tools:targetApi="o" />
            </LinearLayout>



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:id="@+id/tvkodelowinterview"

                android:text="judul"
                android:textColor="@color/defaultfont"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>