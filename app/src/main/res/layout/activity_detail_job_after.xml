<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.carefast.detailjob.DetailJobActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            >
            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_backarrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="Jobs"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/defaultfont"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>


        </RelativeLayout>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_advertisement"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_image3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/defaultfont"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text=" "
            android:id="@+id/tv_jabatan"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/defaultfont"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text=" "
            android:id="@+id/tv_kodejabatan"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/defaultfont"
            android:textAlignment="center"

            android:textSize="12sp"
            android:text=" "
            android:id="@+id/tv_placement"/>
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="11"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/btn_deskripsi"
                android:background="@drawable/roundedbuttonorange"
                android:paddingHorizontal="1dp"
                android:text="Deskripsi"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <Button

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/btn_status"
                android:paddingHorizontal="1dp"
                android:background="@drawable/roundedbuttongray"
                android:text="Status"

                android:textColor="@color/gray"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            
        </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/screen_detail_job"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>